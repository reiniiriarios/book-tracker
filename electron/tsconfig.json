{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "sourceMap": true,
    "outDir": "../dist/electron",
    "baseUrl": ".",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "@core/*": ["../app/core/*"],
      "@data/*": ["../app/data/*"],
      "@style/*": ["../app/style/*"],
      "@api/*": ["../api/*"],
      "@app/*": ["../app/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["../node_modules/*", "../dist/*", "../scripts/*"]
}
