{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "sourceMap": true,
    "outDir": "../dist/electron",
    "baseUrl": ".",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@core/*": ["../frontend/core/*"],
      "@data/*": ["../frontend/data/*"],
      "@style/*": ["../frontend/style/*"],
      "@api/*": ["../backend/*"],
      "@app/*": ["../frontend/*"]
    },
    "typeRoots": ["../types"]
  },
  "include": ["**/*.ts"],
  "exclude": ["../node_modules/*", "../dist/*", "../scripts/*"]
}
