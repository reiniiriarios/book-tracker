{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "sourceMap": true,
    "outDir": "../dist/electron",
    "baseUrl": ".",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["../types", "../node_modules/@types"],
    "types": ["global", "book"]
  },
  "include": ["**/*.ts", "../types", "../env.cjs"],
  "exclude": ["../node_modules/*", "../dist/*", "../scripts/*"]
}
