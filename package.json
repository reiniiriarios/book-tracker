{
  "name": "book-tracker",
  "displayName": "Book Tracker",
  "description": "A cross-platform desktop app for tracking what books you've read and when.",
  "version": "1.18.0",
  "main": "dist/electron/electron/main.js",
  "publishConfig": {
    "access": "public"
  },
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Emma Litwa-Vulcu",
    "email": "80431903+reiniiriarios@users.noreply.github.com"
  },
  "homepage": "https://github.com/reiniiriarios/book-tracker#readme",
  "bugs": {
    "url": "https://github.com/reiniiriarios/book-tracker/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reiniiriarios/book-tracker.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "cross-env BROWSER=true DEBUG=true rollup -c -w",
    "dev:electron": "tsc -p ./electron/tsconfig.json && cross-env DEBUG=true electron ./dist/electron/electron/main.js",
    "build:client": "cross-env PRODUCTION=true rollup -c",
    "build:electron": "tsc -p ./electron/tsconfig.json",
    "build:prod": "ts-node scripts/rmdist.ts && npm run build:client && npm run build:electron",
    "start": "sirv dist",
    "start:electron": "electron ./dist/electron/electron/main.js",
    "clean": "ts-node scripts/rmdist.ts",
    "build:icons": "npx png2icons assets/icons/512x512.png assets/icons/icon -allwe",
    "build:mac": "electron-builder --dir --mac dmg",
    "build:win": "electron-builder --dir --win portable",
    "build:nsis": "electron-builder --dir --win nsis",
    "build:deb": "electron-builder --dir --linux deb",
    "build:rpm": "electron-builder --dir --linux rpm",
    "build:lnx": "electron-builder --dir --linux appImage deb rpm",
    "newver": "ts-node scripts/updateVersion.ts",
    "prepare": "ts-patch install -s"
  },
  "dependencies": {
    "chart.js": "^4.4.2",
    "croppie": "^2.6.5",
    "electron-fetch": "^1.9.1",
    "js-yaml": "^4.1.0",
    "json": "^11.0.0",
    "phosphor-svelte": "^1.4.2",
    "sharp": "^0.33.3",
    "svelte-spa-router": "^4.0.1"
  },
  "devDependencies": {
    "@naholyr/cross-env": "^1.0.0",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/croppie": "^2.6.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.30",
    "@types/shelljs": "^0.8.15",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-svelte": "",
    "pm2": "^5.3.1",
    "png2icons": "^2.0.1",
    "postcss": "^8.4.38",
    "postcss-load-config": "^5.0.3",
    "prettier": "^3.2.5",
    "replace-in-file": "^7.1.0",
    "rollup": "^4.13.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-svelte": "^7.2.0",
    "rollup-plugin-ts-paths": "^1.0.5",
    "sass": "^1.72.0",
    "shelljs": "^0.8.5",
    "sirv-cli": "^2.0.2",
    "svelte": "^4.2.12",
    "svelte-check": "^3.6.8",
    "svelte-file-dropzone": "^2.0.4",
    "svelte-preprocess": "^5.1.3",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.1.2",
    "typescript": "^5.4.3",
    "typescript-transform-paths": "^3.4.7"
  },
  "build": {
    "productName": "Book Tracker",
    "appId": "com.electron.book-tracker",
    "artifactName": "BookTracker-v${version}-${arch}.${ext}",
    "icon": "./icons/512x512.png",
    "directories": {
      "output": "build",
      "buildResources": "assets/"
    },
    "files": [
      "dist"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/sharp/**/*",
      "node_modules/@img/**/*"
    ],
    "win": {
      "icon": "./assets/icons/icon.ico"
    },
    "mac": {
      "icon": "./assets/icons/icon.icns",
      "category": "public.app-category.lifestyle"
    },
    "nsis": {
      "artifactName": "BookTracker-v${version}-${arch}-installer.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "./assets/icons/",
      "category": "Office",
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "desktop": {
        "StartupWMClass": "${productName}"
      }
    }
  },
  "keywords": [
    "books",
    "reading",
    "reading-list",
    "novels"
  ]
}
